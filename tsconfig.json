{
  "extends": "@tsconfig/node10/tsconfig.json",

  "compilerOptions": {
    "preserveConstEnums": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },

  "include": ["src"]
}
